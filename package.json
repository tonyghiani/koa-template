{
  "name": "koa-template",
  "version": "0.0.0",
  "description": "Koa boilerplate template for create-koa-application.",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon index.js",
    "format": "prettier --write \"**/*.+(js|css|sass|yml|yaml|scss|json)\"",
    "lint": "eslint .",
    "precommit": "npm run format && npm run lint",
    "start": "node index.js",
    "test": "NODE_ENV=test mocha --colors --timeout 5000 './{,!(node_modules)/**}/*.test.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcoantonioghiani01/koa-template.git"
  },
  "author": "Marco Antonio Ghiani <marcoantonio.ghiani01@gmail.com> (https://github.com/marcoantonioghiani01)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcoantonioghiani01/koa-template/issues"
  },
  "homepage": "https://github.com/marcoantonioghiani01/koa-template#readme",
  "devDependencies": {
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-jest": "22.5.1",
    "eslint-plugin-node": "9.0.1",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "2.3.0",
    "nodemon": "1.19.0",
    "prettier": "1.17.1"
  },
  "dependencies": {
    "@koa/cors": "2.2.3",
    "joi": "14.3.1",
    "koa": "2.7.0",
    "koa-bodyparser": "4.2.1",
    "koa-router": "7.4.0"
  }
}
